<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyEmailApp.Pages.EmailFactoryPage"
             Shell.FlyoutBehavior="Disabled" 
             
             Title="Novo Modelo">

    <VerticalStackLayout 
        Margin="10" 
        VerticalOptions="Center" 
        MaximumWidthRequest="500">
        
        <Label Text="Novo modelo de email" 
               FontSize="40"
               HorizontalTextAlignment="Center"
               Margin="0,0,0,40"/>
        <Label Text="Nome do Modelo:" Style="{StaticResource LabelStyle}"/>
        <Entry 
            x:Name="txtModelName"
            Placeholder="Nome do novo modelo"
            Style="{StaticResource EntryStyle}"/>

        <Label Text="Assunto:" Style="{StaticResource LabelStyle}"/>
        <Entry 
            x:Name="txtTopic" 
            Placeholder="Escreva o assunto do Email"
            Style="{StaticResource EntryStyle}"/>

        <Label Text="Mensagem:" Style="{StaticResource LabelStyle}"/>
        <Editor 
            x:Name="txtMessage" 
            Placeholder="Mensagem padronizada" 
            HeightRequest="200"
            FontSize="15"
            Margin="0,0,0,10"/>

        <Button 
            x:Name="btnSave" 
            Text="Salvar Modelo" 
            Clicked="btnSave_Clicked"
            FontSize="20"/>

    </VerticalStackLayout>
</ContentPage>